<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <RelativeLayout
        android:id="@+id/register_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/background_top"
        android:padding="@dimen/padding" >

        <Button
            android:id="@+id/btn_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:background="@drawable/title_btn_selector"
            android:text="登录" />

        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="注册" 
            android:gravity="center"
            android:background="@drawable/title_btn_selector"/>

        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registermain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_top"
        android:background="@color/background"
        android:padding="@dimen/padding" >

        <LinearLayout
            android:id="@+id/register_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin" >

            <TextView
                android:id="@+id/register_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    用户名"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_register_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/register_linearLayout1"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin" >

            <TextView
                android:id="@+id/register_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        密码"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/register_linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/register_linearLayout2"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin" >

            <TextView
                android:id="@+id/register_textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_register_confirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/register_linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/register_linearLayout3"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin" >

            <TextView
                android:id="@+id/register_textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        昵称"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_register_nick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>